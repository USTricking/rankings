---
import type { TrickingEvent } from "../../models/TrickingEvent";

type Props = {
  event: TrickingEvent;
}

const { event } = Astro.props;
---

<span class='event-tag'>
  {event.name}
</span>

<style>
  .event-tag {
    background-color: #F9FAFB;
    border: 1px solid #E5E7EB;
    border-radius: 0.375rem;
    color: #374151;
    font-size: 0.75rem;
    font-weight: 600;
    line-height: 1rem;
    padding: 0.25rem 0.5rem;
    text-transform: uppercase;
  }
</style>