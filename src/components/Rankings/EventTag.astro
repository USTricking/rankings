---
import type { TrickingEvent } from "../../models/TrickingEvent";

type Props = {
  event: TrickingEvent;
}

const { event } = Astro.props;
---

<span class:list={['event-tag', {one: event.tier === 1}, {two: event.tier === 2}, {three: event.tier === 3}]}>
  {event.name}
</span>

<style>
  .event-tag {
    border-radius: 0.375rem;
    color: #374151;
    font-size: 0.75rem;
    font-weight: 600;
    line-height: 1rem;
    padding: 0.25rem 0.5rem;
    text-transform: uppercase;
    margin-right: 0.5rem;
  }

  .one {
    background: linear-gradient(135deg, #ffe259 10%, #ffa751 100%);
    border: 1px solid #FFD700;
  }

  .two {
    background: linear-gradient(135deg, #cfd9df 10%, #e2ebf0 100%);
    border: 1px solid #808080;
  }

  .three {
    background: linear-gradient(135deg, #c79081 10%, #dfa579 100%);
    border: 1px solid #CD7F32;
  }
</style>